{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "transformed",
    "plugins": [
      {"transform":  "ts-transformer-extend-global-interface/transformer"}
    ]
  },
  "files": [
    "source/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}